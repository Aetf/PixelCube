<Window x:Class="PixelCube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="MainWindow" Height="480" Width="600" Loaded="Window_Loaded" Closing="Window_Closing">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="文件 (_F)">
                <MenuItem Header="打开 (_O)" />
                <MenuItem Header="保存 (_S)" />
            </MenuItem>
            <MenuItem Header="帮助 (_H)">
                <MenuItem Header="关于 (_A)" />
            </MenuItem>
        </Menu>
        <h:HelixViewport3D x:Name="sceneViewport" Grid.Row="1"
                           CameraRotationMode="Turntable" ModelUpDirection="0,1,0" ShowCoordinateSystem="True">
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera x:Name="mCamera"
						FarPlaneDistance="100" 
						LookDirection="-1,-1,-2" 
						UpDirection="0,1,0"
						NearPlaneDistance="1" 
						Position="10,10,20"
						FieldOfView="60" />
            </h:HelixViewport3D.Camera>

            <h:CoordinateSystemVisual3D ArrowLengths="1"/>
            <h:GridLinesVisual3D Normal="0,1,0" LengthDirection="1,0,0"/>

            <h:SphereVisual3D x:Name="pointer" Radius="0.2" Center="0, 0, 0" />
            <ModelVisual3D >
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="cubeGroup">
                        <!-- Lights, MeshGeometry3D and DiffuseMaterial objects are added to the ModelVisual3D. -->
                        <AmbientLight Color="White" />
                        <DirectionalLight Direction=" 1,-1,-1" Color="White"/>
                        <!--<DirectionalLight Direction="-1, 1, 1" Color="Gray"/>-->
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </h:HelixViewport3D>
    </Grid>
</Window>
