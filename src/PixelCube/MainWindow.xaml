<Window x:Class="PixelCube.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Viewport3D x:Name="sceneViewport">
            <Viewport3D.Camera>
                <PerspectiveCamera FieldOfView="45"
                                   NearPlaneDistance="0.125" FarPlaneDistance="Infinity"
                                   Position="105.806557269459,60.5493825969932,6.89378113550509"
                                   LookDirection="-0.881580007869342,-0.388273275933859,-0.268440967292029"
                                   UpDirection="-0.371435170765064,0.921544281733433,-0.113101948361369"/>
            </Viewport3D.Camera>

            <Viewport3D.Children>
                <ModelVisual3D >
                    <ModelVisual3D.Content>
                        <Model3DGroup x:Name="cubeGroup">
                            <Model3DGroup.Children>
                                <!-- Lights, MeshGeometry3D and DiffuseMaterial objects are added to the ModelVisual3D. -->
                                <DirectionalLight Direction="-0.881580007869342,-0.388273275933859,-0.268440967292029" Color="White"/>
                            </Model3DGroup.Children>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D.Children>
        </Viewport3D>
    </Grid>
</Window>
